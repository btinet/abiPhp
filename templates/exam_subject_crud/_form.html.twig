{{ form_start(form,{'attr':{'class':'needs-validation','novalidate':'novaldiate'}}) }}

<div class="form-group">
    <div class="form-group-header">
        {{ form_label(form.label) }}
    </div>
    <div class="form-group-body">
        {{ form_widget(form.label) }}
        <div class="invalid-feedback color-fg-danger my-2">
            Bitte Bezeichnung des Prüfungsfachs angeben.
        </div>
    </div>
</div>

<div class="form-group">
    <div class="form-group-header">
        {{ form_label(form.abbreviation) }}
    </div>
    <div class="form-group-body">
        {{ form_widget(form.abbreviation) }}
        <div class="invalid-feedback color-fg-danger my-2">
            Bitte Kürzel des Prüfungsfachs angeben.
        </div>
    </div>
</div>

<div class="form-group mt-5">
    <div class="form-group-body">
        <button class="btn btn-outline mr-2">{{ button_label|default('Speichern') }}</button>
        <a class="btn" href="{{ path('app_exam_subject_crud_index') }}">Zurück zur Übersicht</a>
    </div>
</div>

{{ form_end(form) }}
