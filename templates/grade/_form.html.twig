{{ form_start(form,{'attr':{'class':'needs-validation','novalidate':'novaldiate'}}) }}

<div class="form-group">
    <div class="form-group-header">
        {{ form_label(form.grade) }}
    </div>
    <div class="form-group-body">
        {{ form_widget(form.grade) }}
        <div class="invalid-feedback color-fg-danger my-2">
            Bitte Schulnote angeben.
        </div>
    </div>
</div>

<div class="form-group">
    <div class="form-group-header">
        {{ form_label(form.min) }}
    </div>
    <div class="form-group-body">
        {{ form_widget(form.min) }}
        <div class="invalid-feedback color-fg-danger my-2">
            Bitte Mindestpunktzahl angeben.
        </div>
    </div>
</div>

<div class="form-group">
    <div class="form-group-header">
        {{ form_label(form.max) }}
    </div>
    <div class="form-group-body">
        {{ form_widget(form.max) }}
        <div class="invalid-feedback color-fg-danger my-2">
            Bitte Maximalpunktzahl angeben.
        </div>
    </div>
</div>

<div class="form-group mt-5">
    <div class="form-group-body">
        <button class="btn btn-outline mr-2">{{ button_label|default('Speichern') }}</button>
        <a class="btn" href="{{ path('app_grade_index') }}">Zurück zur Übersicht</a>
    </div>
</div>

{{ form_end(form) }}
