{% extends '_admin.html.twig' %}

{% block body %}
    <div class="PageLayout">
        <div class="clearfix gutter">
            <div class="col-12 float-left">
                <div class="PageLayout-header mb-5">
                    <div class=" d-flex flex-justify-between flex-items-baseline flex-wrap mb-5">
                        <div>
                            <h1>Personenverzeichnis</h1>
                            <h3 class="color-fg-accent">Datens√§tze auflisten</h3>
                        </div>
                        <a href="{{ url('app_pupil_crud_new') }}" class="btn btn-outline mb-5">Neuer Datensatz</a>
                    </div>

                    <table class="compact hovering" id="example">
                        <thead class="border-top">
                        <tr class="border-bottom">
                            <th class="TableObject-item text-left">Name</th>
                            <th class="TableObject-item text-left">Vorname</th>
                            <th class="TableObject-item text-right">Geburtsdatum</th>
                            <th class="TableObject-item text-right">Abschlussjahr</th>
                            <th class="TableObject-item text-left">Tutorium</th>
                            <th class="TableObject-item text-right">Kursblock</th>
                            <th class="TableObject-item text-right">Aktion</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for pupil in pupils %}
                        <tr class="border-bottom">
                            <th class="TableObject-item text-left">{{ pupil.lastname }}</th>
                            <td class="TableObject-item">{{ pupil.firstname }}</td>
                            <td class="TableObject-item text-right">{{ pupil.birthDate|date('Y-m-d')|default('') }}</td>
                            <td class="TableObject-item text-right">{{ pupil.examDate|date('Y') }}</td>
                            <td class="TableObject-item">{{ pupil.teacher|default('') }}</td>
                            <td class="TableObject-item text-right">{{ pupil.qualificationPoints|default('') }}</td>
                            <td class="TableObject-item text-right">
                                    <a href="#" class="">anzeigen</a>
                                    <a href="#" class="">bearbeiten</a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-12 col-lg-7 float-left">
                <div class="PageLayout-content">
                    <a href="{{ url('app_pupil_crud_new') }}" class="btn btn-outline">Neuer Datensatz</a>
                </div>
            </div>
            <div class="col-12 col-lg-5 float-left">
                <div class="PageLayout-pane">

                </div>
            </div>
            <div class="col-12 float-left">
            </div>
        </div>
    </div>
{% endblock %}
