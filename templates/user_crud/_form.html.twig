{{ form_start(form,{'attr':{'class':'needs-validation','novalidate':'novaldiate'}}) }}

<h4 class="border-bottom">Persönliche Daten</h4>

<div class="form-group">
    <div class="form-group-header">
        {{ form_label(form.firstname,form.firstname,{'label_attr': {'class':'required'} }) }}
    </div>
    <div class="form-group-body">
        {{ form_widget(form.firstname,{'attr': {'class':'form-control width-full'} }) }}
        <div class="invalid-feedback color-fg-danger my-2">
            Bitte Vornamen des Benutzerkontos angeben.
        </div>
    </div>
</div>

<div class="form-group">
    <div class="form-group-header">
        {{ form_label(form.lastname,form.lastname,{'label_attr': {'class':'required'} }) }}
    </div>
    <div class="form-group-body">
        {{ form_widget(form.lastname,{'attr': {'class':'form-control width-full'} }) }}
        <div class="invalid-feedback color-fg-danger my-2">
            Bitte Nachnamen des Benutzerkontos angeben.
        </div>
    </div>
</div>

<div class="form-group">
    <div class="form-group-header">
        {{ form_label(form.email,form.email,{'label_attr': {'class':'required'} }) }}
    </div>
    <div class="form-group-body">
        {{ form_widget(form.email,{'attr': {'class':'form-control width-full'} }) }}
        <div class="invalid-feedback color-fg-danger my-2">
            Bitte E-Mail-Adresse des Benutzerkontos angeben.
        </div>
    </div>
</div>

<h4 class="border-bottom mt-5">Zugangsdaten</h4>

<div class="form-group">
    <div class="form-group-header">
        {{ form_label(form.username,form.username,{'label_attr': {'class':'required'} }) }}
    </div>
    <div class="form-group-body">
        {{ form_widget(form.username,{'attr': {'class':'form-control width-full'} }) }}
        <div class="invalid-feedback color-fg-danger my-2">
            Bitte Kennung des Benutzerkontos angeben.
        </div>
    </div>
</div>

<div class="form-group">
    <div class="form-group-header">
        <label>Benutzerrollen</label>
        <div class="form-actions">Standardmäßig hat jedes Benutzerkonto die Rolle <span class="rounded color-bg-open color-fg-open text-small px-2 py-1">Benutzer</span>.</div>
    </div>
    <div class="form-group-body">
        {{ form_widget(form.roles) }}

        {% do form.roles.setRendered() %}

    </div>
</div>

<div class="form-group mt-5">
    <div class="form-group-body">
        <button class="btn btn-outline mr-2">{{ button_label|default('Speichern') }}</button>
        <a class="btn" href="{{ path('app_user_crud_index') }}">Zurück zur Übersicht</a>
    </div>
</div>

{{ form_end(form) }}
