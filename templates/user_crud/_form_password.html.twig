{{ form_start(form,{'attr':{'class':'needs-validation','novalidate':'novaldiate'}}) }}

<h4 class="border-bottom mt-5">Zugangsdaten</h4>

<div class="form-group">
    <div class="form-group-header">
        {{ form_label(form.plainPassword.pass,form.plainPassword.pass,{'label_attr': {'class':'required'} }) }}
    </div>
    <div class="form-group-body mb-3">
        {{ form_widget(form.plainPassword.pass,{'attr': {'class':'form-control width-full'} }) }}
        <div class="invalid-feedback color-fg-danger my-2">
            Bitte Passwort des Benutzerkontos angeben.
        </div>
    </div>
    <div class="form-group-body">
        {{ form_widget(form.plainPassword.repeat,{'attr': {'class':'form-control width-full'} }) }}
        <div class="invalid-feedback color-fg-danger my-2">
            Bitte Passwort wiederholen.
        </div>
    </div>
</div>

<div class="form-group mt-5">
    <div class="form-group-body">
        <button class="btn btn-outline mr-2">{{ button_label|default('Speichern') }}</button>
        <a class="btn" href="{{ path('app_user_crud_index') }}">Zurück zur Übersicht</a>
    </div>
</div>

{{ form_end(form) }}
